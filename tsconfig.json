{
  "compilerOptions": {
   "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false ,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/__test__/*"]
}
